/* pages/orderDetail/orderDetail.wxss */
.clear {
  clear:both;
  overflow: hidden;
}

.container {
  background-color:bisque;
  width: 100%;
  height: 100%;
  /* 消除顶部部分空白 */
  padding:0px; 
}

.goods-list {
  background-color: rgba(250, 248, 248, 0.219);
  position: absolute;
  margin-top: 10rpx;
  margin-left: 10rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-content: center;
}

.list-item-bg {
  position: relative;
  float: left;
  margin-top: 10px;
  width: 100%;
  height: 150rpx;
  display: flex;
  background-color: rgba(214, 210, 210, 0.349);
}

.list-item {
  width: 100%;
  height: 100%;
}

.goods-img .goods-picture {
  position: relative;
  width: 130rpx;
  height: 130rpx;
  float: left;
  top: 10rpx;
  left: 10rpx;
}

.mask {
  float: left;
  background-color: rgb(224, 236, 47);
}

.goods-total {
  position: absolute;
  width:120rpx;
  height: 100%;
  float: right;
  right: 10rpx;
  /* 以下三行使得内容水平居中 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* 以下一行使得内容垂直居中 */
  align-items: center;
  background-color: #00B358;
  color: #fff;
  font-size: 30rpx;
}

.goods-state {
  font-weight: bold;
}

.goods-detail {
  width: 100%;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}

.goods-param {
  position: absolute;
  height: 100%;
  float: left;
  left: 150rpx;
  color: rgb(12, 12, 12);
  font-size: 30rpx;
}

.goods-variable {
  position: absolute;
  height: 100%;
  float: right;
  right: 140rpx;
  display: flex;
  flex-direction: column;
  color: rgb(12, 12, 12);
  font-size: 30rpx;
}

.discount {
  color: red;
  font-weight: bold;
}

.prics {
  text-decoration: line-through;
}