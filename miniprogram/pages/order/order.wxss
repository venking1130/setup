.operation {
  position: absolute;
  width:120rpx;
  height: 100%;
  float: right;
  right: 10rpx;
    /* 以下三行使得内容水平居中 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* 以下一行使得内容垂直居中 */
  align-items: center;
  /* background-color: #00B358; */
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
}

.contact-info {
  position: absolute;
  height: 100%;
  margin-top: 15rpx;
  margin-left: 150rpx;
  margin-right: 150rpx;
  font-size: 30rpx;
  /* 以下三行使得内容水平居中 */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

