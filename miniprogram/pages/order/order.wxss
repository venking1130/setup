/* pages/order/order.wxss */

.container{
  width:100%;
  /* 消除顶部部分空白 */
  padding:0px; 
}

.lists {
  position: absolute;
  width: 100%;
  height: 100%;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-content: center;
  /* background-color: rgb(248, 202, 202); */
}

.list-item-bg {
  /* 保证每条item不会被后面的覆盖，必须设置为相对布局 */
  position: relative;
  width: 100%;
  height: 150rpx;
  margin-top: 10rpx;
  display: flex;
  border: 1rpx;
  background-color: rgb(230, 230, 230);
}


.customer-wrap {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.customer {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background-color: #00B358;
  color:#eee;
  font-size: 30rpx;
  line-height:33rpx;
  letter-spacing: 3rpx;
  font-weight: bold;
  pointer-events: none;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
